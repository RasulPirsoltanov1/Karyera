@using Karyera.Application.Features.Categories.Commands.Create
@model CategoryUpdateCommandRequest

@{
    ViewData["Title"] = "Update Category";
}

<h1>Update Category</h1>

<form asp-action="Update" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image" class="control-label">Image</label>
        <input type="file" asp-for="Image" class="form-control-file" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="form-group">
            <label>Current Image:</label>
            <div>
                <img src="~/@Model.ImageUrl" style="width:100px;" />
            </div>
        </div>
    }
    <div class="form-group">
        <label asp-for="SubCategoryId" class="control-label">SubCategory</label>
        <select asp-for="SubCategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name", Model.SubCategoryId))">
            <option value="">-- Select Main Category --</option>
        </select>
        <span asp-validation-for="SubCategoryId" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
