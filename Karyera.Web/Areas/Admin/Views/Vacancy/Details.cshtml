@model Karyera.Domain.Entities.Job

@{
    ViewData["Title"] = "Job Details";
}

<div class="card mt-4">
    <div class="card-header">
        <h2 class="card-title">@Model.Title</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h5>Company</h5>
                <p>@Model.Company</p>
            </div>
            <div class="col-md-6">
                <h5>Location</h5>
                <p>@Model.Location</p>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-12">
                <h5>Description</h5>
                <p>@Model.Description</p>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-6">
                <h5>End Date</h5>
                <p>@Model.EndDate?.ToString("yyyy-MM-dd")</p>
            </div>
            <div class="col-md-6">
                <h5>Contact Email</h5>
                <p>@Model.ContactEmail</p>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-6">
                <h5>Category</h5>
                <p>@Model.Category?.Name</p>
            </div>
            <div class="col-md-6">
                <h5>Is Remote</h5>
                <p>@Model.IsRemote?.ToString()</p>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-6">
                <h5>Salary</h5>
                <p>@Model.Salary?.ToString("C")</p>
            </div>
            <div class="col-md-6">
                <h5>Requirements</h5>
                <ul class="list-group">
                    @foreach (var requirement in Model.Requirements)
                    {
                        <li class="list-group-item">@requirement</li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
